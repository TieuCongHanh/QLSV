<!-- Navbar-->
<header class="app-header">
    <!-- Sidebar toggle button--><a class="app-sidebar__toggle" href="#" data-toggle="sidebar"
        aria-label="Hide Sidebar"></a>
    <!-- Navbar Right Menu-->
    <ul class="app-nav">
        <!-- User Menu-->

        <li>
            <form action="/home/logout" method="post">
                <a class="app-nav__item" href="/" style="padding: 8px;">
                    <button type="submit" style="margin: 0;" title="Đăng Xuất!">
                        <i class='bx bx-log-out bx-rotate-180'></i>
                    </button>
                </a>
            </form>
        </li>
    </ul>
</header>
<!-- Sidebar menu-->
<div class="app-sidebar__overlay" data-toggle="sidebar"></div>
<!-- thanh slide menu bên trái -->
<aside class="app-sidebar">
    <div class="app-sidebar__user"><img class="app-sidebar__user-avatar"
        <% if(req.session.userLogin.image != null ){ %>
            src="<%= req.session.userLogin.image %>"
                <% }else{ %>
                    
         src="/images/logo.png"
        <% } %>
            width="50px"
            alt="User Image">
        <div>
            <p class="app-sidebar__user-name"><b>
                    <%= req.session.userLogin.vaitro %>
                        <%= req.session.userLogin.user %>
                </b></p>
            <p class="app-sidebar__user-designation">Chào mừng bạn trở lại</p>
        </div>
    </div>
    <hr>
    <!-- thanh bảng menu -->
    <ul class="app-menu">
      
        <li><a class="app-menu__item" href="/home">
                <svg xmlns="http://www.w3.org/2000/svg" width="25px" height="25px" fill="currentColor"
                    class="bi bi-house-door" viewBox="0 0 16 16">
                    <path
                        d="M8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4.5a.5.5 0 0 0 .5-.5v-4h2v4a.5.5 0 0 0 .5.5H14a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146ZM2.5 14V7.707l5.5-5.5 5.5 5.5V14H10v-4a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5v4H2.5Z" />
                </svg>
                <span class="app-menu__label" style="margin-left: 15px; margin-top: 5px;">Trang chủ</span></a></li>
        <li>
            <% if(req.session.userLogin.vaitro==='Admin' ){ %>
                <a class="app-menu__item " href="/user">
                    <% }else{ %>
                        <a class="app-menu__item " onclick="alert('Bạn không có quyền truy cập!')" href="">  
                            <% } %>
                                <i class='app-menu__icon bx bx-id-card'></i>
                                <span class="app-menu__label">Quản lý tài khoản</span>
                        </a>
        </li>
       
        <li><a class="app-menu__item" href="/lop"><i class='app-menu__icon bx bx-purchase-tag-alt'>
                </i><span class="app-menu__label">Danh sách lớp</span></a>
        </li>
        <li><a class="app-menu__item" href="/sinhVien"><i class='app-menu__icon bx bx-task'></i><span
                    class="app-menu__label">Quản lý sinh viên</span></a></li>
                    <li><a class="app-menu__item" href="/monhoc"><i class='app-menu__icon bx bx-task'></i><span
                        class="app-menu__label">Quản lý môn học</span></a></li>
    </ul>
</aside>
<script>
    setTimeout(function () {
        document.getElementById('my-message-div').style.display = 'none';
    }, 2000);
</script>
<style>#my-message-div {
    position: fixed;
    font-size: 30px;
    color: black;
    width: 150px;
    text-align: center;
    border-radius: 50px;
    background-color: aqua;
  }</style>